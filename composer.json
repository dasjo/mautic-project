{
    "name": "nickveenhof/mautic-project",
    "description": "Project template for Mautic 2 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "mautic/core": "^8.8.0",
        "nickveenhof/mautic-core-composer-scaffold": "^2.0",
        "nickveenhof/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "vlucas/phpdotenv": "^4.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "MauticProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "MauticProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "MauticProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "MauticProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "mautic/core": "-p2"
        },
        "mautic-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/app": ["type:mautic-core"],
            "web/plugins/{$name}": ["type:mautic-plugin"],
            "web/themes/{$name}": ["type:mautic-theme"]
        }
    }
}
