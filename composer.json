{
  "name": "nickveenhof/mautic-project",
  "description": "Project template for Mautic 2 projects with composer",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "",
      "role": ""
    }
  ],
  "require": {
    "php": ">=7.0.8",
    "composer/installers": "@dev",
    "nickveenhof/mautic-core-composer-scaffold": "@dev",
    "nickveenhof/mautic-finder": "@dev",
    "mautic/core": "dev-3.x-13750",
    "cweagans/composer-patches": "^1.6.5",
    "webmozart/path-util": "^2.3",
    "vlucas/phpdotenv": "^4.0",
    "wikimedia/composer-merge-plugin": "^1.4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ],
    "files": [
      "load.environment.php"
    ]
  },
  "scripts": {
    "pre-install-cmd": [
      "MauticProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "MauticProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "MauticProject\\composer\\ScriptHandler::createRequiredFiles",
      "MauticProject\\composer\\ScriptHandler::moveFilesToProjectRoot"
    ],
    "post-update-cmd": [
      "MauticProject\\composer\\ScriptHandler::createRequiredFiles",
      "MauticProject\\composer\\ScriptHandler::moveFilesToProjectRoot"
    ]
  },
  "repositories": {
    "nickveenhof/mautic-finder": {
      "type": "path",
      "url": "../mautic-finder",
      "options": {
        "symlink": true
      }
    },
    "nickveenhof/mautic-core-composer-scaffold": {
      "type": "path",
      "url": "../mautic-core-composer-scaffold",
      "options": {
        "symlink": true
      }
    },
    "composer/installers": {
      "type": "path",
      "url": "../installers",
      "options": {
        "symlink": true
      }
    },
    "mautic/core": {
      "type": "git",
      "url": "git@github.com:nickveenhof/mautic.git"
    },
    "willdurand/oauth-server-bundle": {
      "type": "git",
      "url": "https://github.com/mautic/BazingaOAuthServerBundle.git"
    },
    "symfony/intl": {
      "type": "git",
      "url": "https://github.com/mautic/intl.git"
    }
  },
  "extra": {
    "_readme": [
      "By default Mautic loads the autoloader from ./vendor/autoload.php.",
      "To change the autoloader you can edit ./autoload.php."
    ],
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
      "mautic/core": "-p2"
    },
    "mautic-scaffold": {
      "locations": {
        "web-root": "public/"
      },
      "file-mapping": {
        "[project-root]/.env.dist": "public/.env.dist",
        "[project-root]/.php_cs": "public/.php_cs",
        "[project-root]/.travis.yml": "public/.travis.yml",
        "[project-root]/codeception.yml": "public/codeception.yml",
        "[project-root]/LICENSE.txt": "public/LICENSE.txt",
        "[project-root]/rector.yaml": "public/rector.yaml",
        "[project-root]/phpstan.neon": "public/phpstan.neon"
      }
    },
    "installer-paths": {
      "public": [
        "type:mautic-core"
      ],
      "public/plugins/{$name}": [
        "type:mautic-plugin"
      ],
      "public/themes/{$name}": [
        "type:mautic-theme"
      ]
    },
    "merge-plugin": {
      "include": [
        "public/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    },
    "patches": {
    }
  }
}